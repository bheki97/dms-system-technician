<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"

            android:background="@drawable/property_panel_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/my_green"
                android:text="Personal Details"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">

                <!--                    type - icon-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_account_circle_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Name"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reporterNameTxt"
                        android:textColor="@color/black"
                        android:text="Bheki Mautjana"/>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/dull_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">

                <!--                    type - icon-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_contact_phone_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Cell number"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cellNoTxt"
                        android:textColor="@color/black"
                        android:text="076 079 4703"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/dull_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">

                <!--                    type - icon-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_email_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Email Address"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailTxt"
                        android:textColor="@color/black"
                        android:text="bfmokoena7@gmail.com"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--    technician details-->
        <LinearLayout
            android:layout_marginVertical="20dp"
            android:elevation="2dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/property_panel_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/my_green"
                android:text="Technician Details"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">

                <!--                    type - icon-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_dataset_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Department Name"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DeptNameTxt"
                        android:textColor="@color/black"
                        android:text="South African Police Service"/>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/dull_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">

                <!--                    type - icon-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_data_usage_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Speciality Name"
                        android:textSize="18dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/specNameTxt"
                        android:textColor="@color/black"
                        android:text="Police Officer"/>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>



<!--        password reset-->

    </LinearLayout>


</ScrollView>