<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_margin="4dp"
    android:padding="5dp"
    android:background="@drawable/rounded_panel_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/disasterImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="-4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content">

        <!--                    type - icon-->
        <ImageView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_pie_chart_24"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Type"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/typeTxt"
                android:textColor="@color/black"
                android:text="SEWAGE BLOCK"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content">

            <!--                    description - icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_date_range_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Report date"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reportDateTxt"
                    android:textColor="@color/black"
                    android:text="01 July 2023"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <!--                    description - icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_location_on_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Location"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationTxt"
                    android:textColor="@color/black"
                    android:text="Thembisile Hani"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>







    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/statusImg"
            />
        <TextView
            android:id="@+id/statusTxt"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="UNATTENDED"/>

    </LinearLayout>

    <TextView
        android:id="@+id/viewTxtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textSize="23dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />


</LinearLayout>