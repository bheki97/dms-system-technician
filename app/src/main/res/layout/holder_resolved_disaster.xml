<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="4dp"
    android:background="@drawable/rounded_panel_wrapper"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/disasterImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <!--                    type - icon-->
        <ImageView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_pie_chart_24"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Type"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/typeTxt"
                android:textColor="@color/black"
                android:text="SEWAGE BLOCK"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content">

            <!--                    description - icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_date_range_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Report date"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reportDateTxt"
                    android:textColor="@color/black"
                    android:text="01 July 2023"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <!--                    description - icon-->
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_date_range_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Complete Date"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/completeDateTxt"
                    android:textColor="@color/black"
                    android:text="1 July 2023"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>